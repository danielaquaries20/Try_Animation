<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="week_sun_sat">
        <item>@string/cdrp_sun</item>
        <item>@string/cdrp_mon</item>
        <item>@string/cdrp_tue</item>
        <item>@string/cdrp_wed</item>
        <item>@string/cdrp_thu</item>
        <item>@string/cdrp_fri</item>
        <item>@string/cdrp_sat</item>
    </string-array>
    <color name="calendar_text">#474747</color>
    <color name="date_color">#000</color>
    <color name="default_date_color">#3b4144</color>
    <color name="disable_date_color">#BDBDBD</color>
    <color name="range_bg_color">#B7C99D</color>
    <color name="range_date_color">@color/default_date_color</color>
    <color name="selected_date_circle_color">#54B948</color>
    <color name="selected_date_color">#FFF</color>
    <color name="title_color">#000</color>
    <color name="week_color">#000</color>
    <dimen name="dateTitlePaddingBottom">5dp</dimen>
    <dimen name="dayOfMonthBoxSize">44dp</dimen>
    <dimen name="dayOfMonthImageMarginTop">32dp</dimen>
    <dimen name="dayOfMonthImageSize">4dp</dimen>
    <dimen name="dayOfMonthMinHeight">0dp</dimen>
    <dimen name="dayOfMonthMinWidth">50dp</dimen>
    <dimen name="dayOfMonthPaddingBottom">0dp</dimen>
    <dimen name="dayOfMonthSize">34dp</dimen>
    <dimen name="strip_height">28dp</dimen>
    <dimen name="text_size_date">18sp</dimen>
    <dimen name="text_size_title">22sp</dimen>
    <dimen name="text_size_week">15sp</dimen>
    <dimen name="weekDaysPaddingBottom">0dp</dimen>
    <dimen name="weekRowMinHeight">44dp</dimen>
    <string name="app_name">AwesomeCalendar</string>
    <string name="cancel">Cancel</string>
    <string name="cdrp_fri">Fri</string>
    <string name="cdrp_mon">Mon</string>
    <string name="cdrp_sat">Sat</string>
    <string name="cdrp_sun">Sun</string>
    <string name="cdrp_thu">Thu</string>
    <string name="cdrp_tue">Tue</string>
    <string name="cdrp_wed">Wed</string>
    <string name="done">Done</string>
    <string name="select_time">Select a Time</string>
    <string name="title_time_picker">Select Time</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="ContainerDayOfWeek">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="DayOfMonthStyle">
        <item name="android:layout_width">@dimen/dayOfMonthSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthSize</item>
        <item name="android:textSize">@dimen/text_size_date</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/dayOfMonthMinHeight</item>
        <item name="android:minWidth">@dimen/dayOfMonthMinWidth</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
        <item name="android:textColor">@color/default_date_color</item>
    </style>
    <style name="StripRange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/strip_height</item>
        <item name="android:background">@color/range_bg_color</item>
        <item name="android:layout_centerVertical">true</item>


    </style>
    <style name="WeekDayTitleStyle">
        <item name="android:layout_width">@dimen/dayOfMonthBoxSize</item>
        <item name="android:layout_height">@dimen/dayOfMonthBoxSize</item>
        <item name="android:textSize">@dimen/text_size_week</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/date_color</item>
        <item name="android:paddingBottom">@dimen/dayOfMonthPaddingBottom</item>
    </style>
    <declare-styleable name="DateRangeMonthView">
        <attr format="color" name="title_color"/>
        <attr format="color" name="week_color"/>
        <attr format="color" name="range_color"/>
        <attr format="color" name="selected_date_circle_color"/>
        <attr format="color" name="selected_date_color"/>
        <attr format="color" name="default_date_color"/>
        <attr format="color" name="range_date_color"/>
        <attr format="color" name="disable_date_color"/>
        <attr format="boolean" name="enable_time_selection"/>
        <attr format="dimension" name="text_size_title"/>
        <attr format="dimension" name="text_size_week"/>
        <attr format="dimension" name="text_size_date"/>
        <attr format="integer" name="header_bg"/>
        <attr format="string" name="calendar_tag"/>
        <attr format="integer" name="week_offset"/>
        <attr format="boolean" name="enable_past_date"/>
        <attr format="boolean" name="editable"/>
    </declare-styleable>
</resources>