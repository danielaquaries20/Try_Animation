<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/vBackgroundYellow"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="10"
            android:scaleY="10"
            motion:transitionEasing="cubic(0.21,0.21,0.8,0.8)" />
        <Constraint
            android:id="@+id/ivLogo"
            motion:layout_constraintEnd_toEndOf="@id/vBackgroundYellow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            motion:layout_constraintBottom_toBottomOf="@id/vBackgroundYellow"
            motion:layout_constraintTop_toTopOf="@id/vBackgroundYellow"
            motion:layout_constraintStart_toStartOf="@id/vBackgroundYellow"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/vBackgroundYellow"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/ivLogo"
            motion:layout_constraintEnd_toEndOf="@id/vBackgroundYellow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            motion:layout_constraintBottom_toBottomOf="@id/vBackgroundYellow"
            motion:layout_constraintTop_toTopOf="@id/vBackgroundYellow"
            motion:layout_constraintStart_toStartOf="@id/vBackgroundYellow"
            android:visibility="visible" />
    </ConstraintSet>
</MotionScene>