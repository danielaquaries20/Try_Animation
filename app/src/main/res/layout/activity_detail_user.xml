<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".try_architecture_code.ui.detail_user.DetailUserActivity">

    <RelativeLayout
        android:id="@+id/relativeAppBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/amberA700"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="?selectableItemBackground"
            android:contentDescription="@string/icon_image"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:text="Detail User"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icDeleteUser"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="15dp"
            android:background="?selectableItemBackground"
            android:contentDescription="@string/icon_image"
            android:src="@drawable/ic_delete"
            app:tint="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeAppBar">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/icon_image"
            android:src="@drawable/ic_baseline_person" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="Nama Depan"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etFirstUsername"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:autofillHints="User"
            android:hint="Nama Depan User"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="Nama Belakang"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etLastUsername"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:autofillHints="User"
            android:hint="Nama Belakang User"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="Umur"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:autofillHints="User"
            android:hint="Umur User"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:text="Bio Pengguna"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="3dp"
            android:autofillHints="User"
            android:hint="Bio User"
            android:inputType="textMultiLine"
            android:maxHeight="70dp"
            android:minHeight="45dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>