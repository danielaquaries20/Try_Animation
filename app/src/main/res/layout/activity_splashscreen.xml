<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_splashscreen_scene"
    tools:context=".SplashscreenActivity">

    <View
        android:id="@+id/vBackgroundYellow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/background_round_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_note"
        app:layout_constraintBottom_toBottomOf="@id/vBackgroundYellow"
        app:layout_constraintEnd_toEndOf="@id/vBackgroundYellow"
        app:layout_constraintStart_toStartOf="@id/vBackgroundYellow"
        app:layout_constraintTop_toTopOf="@id/vBackgroundYellow" />

</androidx.constraintlayout.motion.widget.MotionLayout>