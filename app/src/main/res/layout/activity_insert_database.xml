<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kl_basic.chapter_12.ui.test_ui.test_db.InsertDatabaseActivity">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/value_16dp"
        android:adjustViewBounds="true"
        android:background="?selectableItemBackground"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/honkai_impact_3rd"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_photo_profile_1_1" />

    <EditText
        android:id="@+id/et_name"
        style="@style/etCapWords"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens50dp"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:hint="Name"
        android:importantForAutofill="no"
        android:paddingHorizontal="@dimen/dimens_10dp" />

    <EditText
        android:id="@+id/et_school"
        style="@style/etCapWords"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens50dp"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:hint="School"
        android:importantForAutofill="no"
        android:paddingHorizontal="@dimen/dimens_10dp" />

    <EditText
        android:id="@+id/et_hobby"
        style="@style/etCapWords"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens50dp"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:hint="Hobby"
        android:importantForAutofill="no"
        android:paddingHorizontal="@dimen/dimens_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            style="@style/buttonClicked"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_12dp"
            android:layout_marginTop="@dimen/dimens_25dp"
            android:text="Simpan" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete"
            style="@style/buttonClicked"
            android:visibility="gone"
            android:background="@drawable/ripple_btn_red"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_12dp"
            android:layout_marginTop="@dimen/dimens_25dp"
            android:text="Hapus" />

    </LinearLayout>

</LinearLayout>