<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.kl_basic.chapter_12.ui.main.Chapter12MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_shared_preferences"
        style="@style/buttonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:background="@drawable/ripple_btn_red"
        android:text="Shared Preferences" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_room_database"
        style="@style/buttonClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:background="@drawable/ripple_btn_purple"
        android:text="Room Database" />

</LinearLayout>