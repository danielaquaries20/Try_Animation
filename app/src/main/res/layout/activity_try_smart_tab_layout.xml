<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".try_smart_tab_layout.TrySmartTabLayoutActivity">

    <RelativeLayout
        android:id="@+id/relativeAppBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F9A825"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/icon_image"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Try Smart Tab Layout"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/viewTabLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/relativeAppBar">

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/smartTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:stl_clickable="true"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextColor="#FC4D0C60"
            app:stl_defaultTabTextHorizontalPadding="10dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_defaultTabTextSize="12sp"
            app:stl_distributeEvenly="true"
            app:stl_dividerColor="#283593"
            app:stl_dividerThickness="2dp"
            app:stl_drawDecorationAfterTab="true"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="#43000000"
            app:stl_indicatorCornerRadius="10dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInFront="true"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="50dp"
            app:stl_indicatorWidth="50dp"
            app:stl_indicatorWithoutPadding="true"
            app:stl_overlineColor="#2E7D32"
            app:stl_overlineThickness="2dp"
            app:stl_titleOffset="auto_center"
            app:stl_underlineColor="#AD1457"
            app:stl_underlineThickness="2dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/materialTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:backgroundTint="#F9A825"
            app:tabIndicatorAnimationDuration="3"
            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorColor="#87580D"
            app:tabIndicatorGravity="stretch"
            app:tabMode="fixed"
            app:tabPadding="7dp"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTabLayout">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>