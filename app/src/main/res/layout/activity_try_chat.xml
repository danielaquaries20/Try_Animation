<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".try_chat_app.TryChatActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:scaleY="3"
        android:scaleX="1.1"
        android:background="@drawable/shadow_bottom"
        app:layout_constraintTop_toTopOf="@id/constraintStatusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="@id/constraintStatusBar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintStatusBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background_layout_round_dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="17dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/icon_image"
            android:src="@drawable/ic_baseline_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPhotoProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            app:cardCornerRadius="999dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/icon_image"
                android:scaleType="centerCrop"
                android:src="@drawable/elysia" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvOpponentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="17dp"
            android:maxLines="1"
            android:text="@string/elysia"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/cardPhotoProfile"
            app:layout_constraintStart_toEndOf="@id/cardPhotoProfile"
            app:layout_constraintTop_toTopOf="@id/cardPhotoProfile" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        tools:itemCount="10"
        tools:listitem="@layout/item_rv_chat_from_me"
        android:paddingBottom="80dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintStatusBar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintTypeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/etTypeMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:maxHeight="120dp"
            android:minHeight="50dp"
            android:autofillHints="@string/message"
            android:background="@drawable/background_et_type_message"
            android:hint="@string/message"
            android:inputType="textMultiLine"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardSendMessage"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSendMessage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:background="?selectableItemBackground"
            android:visibility="visible"
            app:cardCornerRadius="999dp"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark"
                android:contentDescription="@string/icon_image"
                android:paddingStart="14dp"
                android:paddingTop="10dp"
                android:paddingEnd="9dp"
                android:paddingBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_send"
                app:tint="@color/white" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>