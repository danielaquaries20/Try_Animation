<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kl_basic.chapter_5.Chapter5MainActivity">

    <TextView
        style="@style/textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:text="@string/username"
        android:textAllCaps="false" />

    <EditText
        style="@style/etCapWords"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45dp"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:hint="@string/input_your_name"
        android:importantForAutofill="no"
        android:paddingHorizontal="@dimen/dimens_10dp" />

    <TextView
        style="@style/textStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:text="@string/password"
        android:textAllCaps="false" />

    <EditText
        style="@style/etPasswordsText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45dp"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:hint="@string/input_your_password"
        android:importantForAutofill="no"
        android:paddingHorizontal="@dimen/dimens_10dp" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/buttonClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_25dp"
        android:text="@string/login" />

</LinearLayout>