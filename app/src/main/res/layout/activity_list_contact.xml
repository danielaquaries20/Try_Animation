<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="activity"
            type="com.example.tryanimation.ui.kl_basic.chapter_13.ui.list_contact.ListContactActivity" />


        <variable
            name="adapter"
            type="com.example.tryanimation.ui.kl_basic.chapter_13.ui.list_contact.AdapterRvListContact" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.kl_basic.chapter_13.ui.list_contact.ListContactActivity">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="@dimen/dimens_15dp"
            android:background="@drawable/ripple_btn_red"
            android:onClick="@{() -> activity.initCheck()}"
            android:text="Get Contact" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/value_8dp"
            android:orientation="vertical"
            android:adapter="@{adapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_try_all" />

    </LinearLayout>

</layout>

